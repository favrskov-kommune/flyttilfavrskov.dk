{#
/**
 * @file
 * Default theme implementation for a three-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}

{% set allow_spacing = settings.column_spacing and settings.column_spacing != 'none' %}

{% set classes = [
  'layout',
  'layout--threecol',
  settings.color_theme != 'none' ? 'theme theme-' ~ settings.color_theme,
  'section',
  not allow_spacing ? 'section--no-spacing'
] %}

<section {{ attributes.addClass(classes) }}>
  <div class="container">
    <div class="row">
      <div {{ region_attributes.first.addClass(['col-xs-12', 'col-md-4', 'layout__region']) }}>
        {{ content.first }}
      </div>
      <div {{ region_attributes.second.addClass(['col-xs-12', 'col-md-4', 'layout__region']) }}>
        {{ content.second }}
      </div>
      <div {{ region_attributes.third.addClass(['col-xs-12', 'col-md-4', 'layout__region']) }}>
        {{ content.third }}
      </div>
    </div>
  </div>
</section>
