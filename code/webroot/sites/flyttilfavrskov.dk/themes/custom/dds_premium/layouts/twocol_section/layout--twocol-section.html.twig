{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}

{% set columns = {
  '50-50': { left: 'col-xs-12 col-md-6', right: 'col-xs-12 col-md-6' },
  '33-67': { left: 'col-xs-12 col-md-4', right: 'col-xs-12 col-md-8' },
  '67-33': { left: 'col-xs-12 col-md-8', right: 'col-xs-12 col-md-4' }
} %}

{% set allow_spacing = settings.column_spacing and settings.column_spacing != 'none' %}

{% set classes = [
  'layout',
  'layout--twocol',
  settings.color_theme != 'none' ? 'theme theme-' ~ settings.color_theme,
  'section',
  not allow_spacing ? 'section--no-spacing'
] %}

<section {{ attributes.addClass(classes) }}>
  <div class="container">
    <div class="row">
      <div {{ region_attributes.first.addClass([columns[settings.column_widths].left, 'layout__region']) }}>
        {{ content.first }}
      </div>
      <div {{ region_attributes.second.addClass([columns[settings.column_widths].right, 'layout__region']) }}>
        {{ content.second }}
      </div>
    </div>
  </div>
</section>
