<div class="col-xs-12 col-md-6">
  <a href="{{ url }}" class="list-view-item">
    <figure class="list-view-item__image">
      {% if image %}
        {{ image|image(image_style, 'lazyload lazyload-measure lazyload-bg') }}
      {% endif %}
    </figure>
    <div class="list-view-item__content">
      <h3 class="list-view-item__title">{{- title -}}</h3>
      <p class="list-view-item__text">{{- excerpt -}}</p>
      <span class="text-link">{{ 'Read more'|t({}, {'context' : 'premium search-item'}) }}</span>
    </div>
  </a>
</div>
